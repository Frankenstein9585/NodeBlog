<div class="title__container">
    <h1 class="page__title">Hi, I'm Frankenstein</h1>
    <p class="page__subtitle">Web Developer and DevOps Engineer</p>
</div>

<div class="img__container">
    <img src="/img/img.png">
</div>

<div class="posts__container">
    <h3 class="posts__heading">Latest Posts</h3>

    <% posts.forEach(post => { %>
    <div class="post__container">
        <a href="/post/<%= post._id %>"><h3 class="post__title"><%= post.title %></h3></a>
        <p class="post__date"><%= post.createdAt.toDateString() %></p>
    </div>
    <% }) %>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</div>

